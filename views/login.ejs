      <input type="password" name="password" placeholder="Enter Password" required class="w-full px-4 py-2 bg-zinc-700 text-white rounded focus:outline-none focus:ring-2 focus:ring-blue-500"><br>
      <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold">Login</button>
    </form>
